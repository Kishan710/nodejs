<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My To-Do List</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>To-Do List</h1>
        </header>

        <section class="add-task-form">
            <form action="/add" method="POST">
                <input type="text" name="task" placeholder="Add a new task..." required>
                <button type="submit" class="btn">Add Task</button>
            </form>
        </section>

        <section class="task-list">
            <% if (array.length > 0) { %>
                <ul>
                    <% array.forEach((element, index) => { %>
                        <li class="task-item">
                            <span class="task-text"><%= element.task %></span>
                            <div class="task-actions">
                                <a href="/edit/<%= index %>" class="btn edit-btn">Edit</a>
                                <a href="/delete/<%= index %>" class="btn delete-btn">Delete</a>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="empty-message">No tasks yet! Add one above.</p>
            <% } %>
        </section>
    </div>
</body>
</html>