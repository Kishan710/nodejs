<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Edit Movie â€” Animated UI</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-pink-50 via-purple-50 to-blue-50 min-h-screen">
  <%- include('partials/navbar') %>
  <main class="max-w-3xl mx-auto p-6">
    <div class="bg-white/60 backdrop-blur-md rounded-2xl p-6 shadow-lg border border-white/40">
      <h2 class="text-2xl font-bold text-indigo-700 mb-4">Edit Movie</h2>
      <form action="/update" method="post" enctype="multipart/form-data" class="space-y-3">
        <input type="hidden" name="id" value="<%= editData._id %>"/>
        <input name="movieName" value="<%= editData.movieName %>" required class="w-full p-3 rounded-lg border"/>
        <input name="director" value="<%= editData.director %>" required class="w-full p-3 rounded-lg border"/>
        <input name="releaseYear" value="<%= editData.releaseYear %>" class="w-full p-3 rounded-lg border"/>
        <input name="genre" value="<%= editData.genre %>" class="w-full p-3 rounded-lg border"/>
        <div>
          <label class="block mb-1 text-sm text-gray-600">Replace Image</label>
          <input type="file" name="image"/>
        </div>
        <div class="flex gap-2 mt-4">
          <button class="flex-1 py-3 rounded-lg bg-gradient-to-r from-indigo-500 to-pink-500 text-white font-semibold hover:scale-105 transition">Update</button>
          <a href="/" class="py-3 px-4 rounded-lg border border-gray-300">Cancel</a>
        </div>
      </form>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
